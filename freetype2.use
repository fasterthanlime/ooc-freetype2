Name: FreeType
Description: Library to easily work with fonts
Version: 2.3.12
SourcePath: source

# Desktop platforms
version (linux || windows || (apple && !ios)) {
    Pkgs: freetype2
    Includes: ft2build.h, freetype/freetype.h
}

# Mobile platforms
version (android || ios) {
    Includes: ft2build.h, freetype/freetype.h

    version (android) {
        AndroidLibs: c_freetype2
        AndroidIncludePaths: ../c_freetype2/include
        Libs: -lfreetype2
    }
}

